//Ejercicio 2 - Scope Functions
//data class User(val id: Int, var email: String)
//
//fun updateEmail(user: User, newEmail: String): User=user.apply {
//    this.email=newEmail
//  }.also {
//  println("Updating email for user with ID: ${it.id}") }
